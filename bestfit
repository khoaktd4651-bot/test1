#include "bestfit.h"
#include "climits"

int best_index =-1;
int smallest_size = INT_MAX;
int bestfit::findblock(const vector<block>&memory,int size){
    for (int i=0;i<memory.size();i++){
        if (memory[i].free &&memory[i].size>=smallest_size){
            smallest_size =memory[i].size;
            best_index =i;
        }
    }
    return best_index;
}
